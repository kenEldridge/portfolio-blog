---
interface Props {
  datasetName: string;
}

const { datasetName } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + '/';
---

<div class="news-section">
  <h3>Recent Articles</h3>
  <div id="news-list" class="news-list">
    <p class="loading">Loading articles...</p>
  </div>
</div>

<script define:vars={{ datasetName, base }}>
  async function loadNews() {
    const url = `${base}data/${datasetName}.json`;
    const response = await fetch(url);
    const dataset = await response.json();
    return dataset.data || [];
  }

  function formatDate(dateStr) {
    const d = new Date(dateStr);
    return d.toLocaleDateString('en-US', {
      year: 'numeric',
      month: 'short',
      day: 'numeric',
    });
  }

  async function renderNews() {
    const articles = await loadNews();
    const container = document.getElementById('news-list');

    if (articles.length === 0) {
      container.innerHTML = '<p class="empty">No articles found</p>';
      return;
    }

    const html = articles.map(article => `
      <article class="news-item">
        <div class="news-meta">
          <span class="news-date">${formatDate(article.published)}</span>
          ${article.feed_name ? `<span class="news-feed">${article.feed_name}</span>` : ''}
        </div>
        <h4 class="news-title">
          <a href="${article.link}" target="_blank" rel="noopener">${article.title}</a>
        </h4>
        ${article.author ? `<span class="news-author">by ${article.author}</span>` : ''}
      </article>
    `).join('');

    container.innerHTML = html;
  }

  renderNews();
</script>

<style>
  .news-section {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.25rem;
    margin-bottom: 1.5rem;
  }

  h3 {
    margin: 0 0 1rem 0;
    font-size: 1rem;
    color: var(--text-heading);
  }

  .news-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .loading, .empty {
    color: var(--text-secondary);
    text-align: center;
    padding: 2rem;
  }

  .news-item {
    padding: 1rem;
    background: var(--bg-primary);
    border-radius: 6px;
    border: 1px solid transparent;
    transition: border-color 0.2s;
  }

  .news-item:hover {
    border-color: var(--border);
  }

  .news-meta {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
    font-size: 0.8rem;
  }

  .news-date {
    color: var(--text-secondary);
  }

  .news-feed {
    color: var(--accent);
    font-weight: 500;
  }

  .news-title {
    margin: 0 0 0.25rem 0;
    font-size: 1rem;
    font-weight: 500;
    line-height: 1.4;
  }

  .news-title a {
    color: var(--text-heading);
    text-decoration: none;
  }

  .news-title a:hover {
    color: var(--accent);
    text-decoration: underline;
  }

  .news-author {
    font-size: 0.8rem;
    color: var(--text-secondary);
  }
</style>
