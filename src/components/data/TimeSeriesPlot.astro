---
interface Props {
  datasetName: string;
  symbols: string[];
}

const { datasetName, symbols } = Astro.props;
const base = import.meta.env.BASE_URL.endsWith('/')
  ? import.meta.env.BASE_URL
  : import.meta.env.BASE_URL + '/';
---

<div class="plot-section">
  <div class="plot-header">
    <h3>Price Chart</h3>
    <div class="plot-controls">
      <label for="symbol-select">Symbol:</label>
      <select id="symbol-select">
        {symbols.map((s, i) => (
          <option value={s} selected={i === 0}>{s}</option>
        ))}
      </select>
      <label for="chart-type">Chart:</label>
      <select id="chart-type">
        <option value="candlestick">Candlestick</option>
        <option value="line">Line</option>
      </select>
    </div>
  </div>
  <div id="timeseries-plot"></div>
</div>

<script define:vars={{ datasetName, base }}>
  // Import Plotly dynamically
  import('plotly.js-dist-min').then((Plotly) => {
    let chartData = null;

    async function loadData() {
      if (chartData) return chartData;
      const url = `${base}data/${datasetName}.json`;
      const response = await fetch(url);
      chartData = await response.json();
      return chartData;
    }

    async function renderPlot(symbol, chartType) {
      const dataset = await loadData();
      const data = dataset.data.filter(d => d.symbol === symbol);

      if (data.length === 0) {
        document.getElementById('timeseries-plot').innerHTML =
          '<p style="text-align:center;color:var(--text-secondary)">No data for this symbol</p>';
        return;
      }

      // Sort by date
      data.sort((a, b) => new Date(a.date).getTime() - new Date(b.date).getTime());

      const isDark = document.documentElement.getAttribute('data-theme') === 'dark';
      const bgColor = isDark ? '#1a1a2e' : '#ffffff';
      const textColor = isDark ? '#e0e0e0' : '#333333';
      const gridColor = isDark ? 'rgba(255,255,255,0.1)' : 'rgba(0,0,0,0.1)';

      let traces;
      if (chartType === 'candlestick') {
        traces = [{
          x: data.map(d => d.date),
          open: data.map(d => d.open),
          high: data.map(d => d.high),
          low: data.map(d => d.low),
          close: data.map(d => d.close),
          type: 'candlestick',
          name: symbol,
          increasing: { line: { color: '#22c55e' } },
          decreasing: { line: { color: '#ef4444' } },
        }];
      } else {
        traces = [{
          x: data.map(d => d.date),
          y: data.map(d => d.close),
          type: 'scatter',
          mode: 'lines',
          name: symbol,
          line: { color: '#3b82f6', width: 2 },
        }];
      }

      const layout = {
        title: {
          text: `${symbol} Price History`,
          font: { color: textColor },
        },
        xaxis: {
          title: 'Date',
          gridcolor: gridColor,
          color: textColor,
          rangeslider: { visible: false },
        },
        yaxis: {
          title: 'Price',
          gridcolor: gridColor,
          color: textColor,
        },
        paper_bgcolor: bgColor,
        plot_bgcolor: bgColor,
        font: { color: textColor },
        margin: { t: 50, r: 30, b: 50, l: 60 },
      };

      Plotly.default.newPlot('timeseries-plot', traces, layout, {
        responsive: true,
        displayModeBar: true,
        modeBarButtonsToRemove: ['lasso2d', 'select2d'],
      });
    }

    // Initial render
    const symbolSelect = document.getElementById('symbol-select');
    const chartTypeSelect = document.getElementById('chart-type');

    renderPlot(symbolSelect.value, chartTypeSelect.value);

    symbolSelect.addEventListener('change', (e) => {
      renderPlot(e.target.value, chartTypeSelect.value);
    });

    chartTypeSelect.addEventListener('change', (e) => {
      renderPlot(symbolSelect.value, e.target.value);
    });

    // Re-render on theme change
    const observer = new MutationObserver(() => {
      renderPlot(symbolSelect.value, chartTypeSelect.value);
    });
    observer.observe(document.documentElement, {
      attributes: true,
      attributeFilter: ['data-theme'],
    });
  });
</script>

<style>
  .plot-section {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1.25rem;
    margin-bottom: 1.5rem;
  }

  .plot-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  h3 {
    margin: 0;
    font-size: 1rem;
    color: var(--text-heading);
  }

  .plot-controls {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    flex-wrap: wrap;
  }

  label {
    font-size: 0.85rem;
    color: var(--text-secondary);
  }

  select {
    padding: 0.375rem 0.625rem;
    background: var(--bg-primary);
    color: var(--text-primary);
    border: 1px solid var(--border);
    border-radius: 4px;
    font-size: 0.85rem;
    cursor: pointer;
  }

  select:hover {
    border-color: var(--accent);
  }

  #timeseries-plot {
    width: 100%;
    height: 450px;
  }

  @media (max-width: 600px) {
    .plot-header {
      flex-direction: column;
      align-items: flex-start;
    }

    #timeseries-plot {
      height: 350px;
    }
  }
</style>
